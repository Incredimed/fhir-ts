{
  "compilerOptions": {
    "lib": ["es7"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "types": ["node", "glob", "jest"]
  },
  "include": ["lib/**/**.ts"],
  "exclude": ["node_modules"]
}
